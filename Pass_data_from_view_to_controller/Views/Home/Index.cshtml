            <h1>PostUsingRequest</h1>
            @using (Html.BeginForm("PostUsingRequest", "Home"))
            {

                <input type="text" name="firstName" /> <br />

                <input type="text" name="lastName" /> <br />

                <br />

                <input type="submit" value="Click me" />


            }



            <br />

            <hr />
            <hr />
