    Layout = null;

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div> 

        <section>


            <h1>PostUsingParameters</h1>

            @using (Html.BeginForm("PostUsingParameters", "Home"))
            {

                <input type="text" name="firstName" /> <br />

